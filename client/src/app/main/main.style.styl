.view-wrapper
  width 960px
  margin 20px auto

.phone-item
  display inline-table
  margin 10px 5px
  border 2px solid black
  width 300px
  height 350px
  position relative
  box-sizing border-box

.phone-img-wrapper
  width 270px
  height 150px
  margin 10px 15px
  border 1px solid black
  padding 5px 75px

.phone-img-wrapper img
  width 120px
  height 140px

.phone-name
  font-size 12px
  margin-left 15px
  font-weight bold
  display inline-block
  width 60%

.price-wrapper
  display inline-block
  border 2px solid #8c9191
  background #ff6740
  position absolute
  padding 5px 22px
  right 15px
  width 85px
  height 36px

.phone-price
  font-size 16px
  font-weight bold

.add-to-backet
  background #ff6740
  font-size 16px
  font-weight bold
  padding 5px 20px
  position absolute
  right 15px
  width 85px
  height 36px
  bottom 15px
