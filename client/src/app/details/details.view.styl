.view-wrapper
  width 960px
  margin 20px auto
  position relative

li
  list-style none

.phone-details-wrapper
  height 400px

.phone-description
  display inline-block
  width 566px
  height 400px
  position absolute
  margin-left 10px
  top 0

.details-images-wrapper
  display inline-block
  width 384px
  height 400px

.imgs-collection
  list-style none

.imgs-collection li:nth-child(1n+1)
  display inline-block
  margin-top 10px
  margin-right 5px
  border 1px solid black

.imgs-collection:nth-child(1n+1) img
  width 45px
  height 45px

.imgs-collection li:first-child img
  width 300px
  height 300px

.model-name
  margin 0
  font-weight bold

.description
  margin 0
  padding 0


.comments-wrapper
  position relative
  padding 0 40px


.btn
  display block







